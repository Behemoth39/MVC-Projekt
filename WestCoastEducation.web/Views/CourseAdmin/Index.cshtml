@model IList<WestCoastEducation.web.ViewModels.CourseListViewModel>
@{
    Layout = "_LayoutAdmin";
    ViewBag.Pagetitle = "Course Admin";
}
<section class="page">
    <h1 class="table-h1">Kurser</h1>
    <div class="table-container">
        <div>
            <a class="btn-table" asp-action=create asp-controller="CourseAdmin">Lägg till kurs</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Kurs</th>
                    <th>Kurs Nr</th>
                    <th>Kurstitel</th>
                    <th>Kursstart</th>
                    <th>Kurslängd</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>
                            <a class="edit-icon" asp-action="Edit" asp-controller=CourseAdmin
                            asp-route-courseId="@course.CourseId">
                                <i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                        <td>@course.CourseName</td>
                        <td>@course.CourseNumber</td>
                        <td>@course.CourseTitle</td>
                        <td>@course.CourseStart</td>
                        <td>@course.CourseLenght</td>
                        <td>
                            <a class="delete-icon" asp-action="Delete" asp-controller=CourseAdmin
                            asp-route-courseId="@course.CourseId">
                                <i class="fa-solid fa-delete-left"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>
