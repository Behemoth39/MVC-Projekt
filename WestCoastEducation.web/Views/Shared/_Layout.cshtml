<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/banner-menu.css">
    <link rel="stylesheet" href="~/css/table.css">
    <script src="https://kit.fontawesome.com/1e64290bfc.js" crossorigin="anonymous"></script>
    <title>@ViewBag.Pagetitle - WestCoastEducation</title>
</head>

<body>

    <header>
        <nav class="banner-menu">
            <div class="banner-menu-links">
                <div>
                    <a asp-controller="home" asp-action="Index">Hem</a>
                </div>
                <div>
                    <a asp-controller="courses" asp-action="Index">Kurser</a>
                </div>
                <div>
                    <a asp-controller="users" asp-action="Index">Användare</a>
                </div>
            </div>
            <div class="banner-site-name">
                <p>West Coast Education <a asp-action="Index" asp-controller="Admin">
                        <i class="fa-solid fa-gear"></i></a></p>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

</body>

</html>
