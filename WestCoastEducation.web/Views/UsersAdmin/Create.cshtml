@model WestCoastEducation.web.ViewModels.UserPostViewModel
@{
    Layout = "_LayoutAdmin";
    ViewBag.Pagetitle = "Admin-panel";
}
<section class="page">
    <h1 class="table-h1">Lägg till Användare</h1>
    <form class="" asp-action="create" asp-controller="UsersAdmin" method="post">
        <div class="form-control">
            <label asp-for="UserName"></label>
            <input asp-for="UserName">
            <span class="error" asp-validation-for="UserName"></span>
        </div>
        <div class="form-control">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">
            <span class="error" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-control">
            <label asp-for="LastName"></label>
            <input asp-for="LastName">
            <span class="error" asp-validation-for="LastName"></span>
        </div>
        <div class="form-control">
            <label asp-for="Email"></label>
            <input asp-for="Email">
            <span class="error" asp-validation-for="Email"></span>
        </div>
        <div class="form-control">
            <label asp-for="Phone"></label>
            <input asp-for="Phone">
            <span class="error" asp-validation-for="Phone"></span>
        </div>
        <div class="form-control">
            <label asp-for="Password"></label>
            <input asp-for="Password">
            <span class="error" asp-validation-for="Password"></span>
        </div>
        <div class="form-control">
            <label asp-for="TypeOfUser"></label>
            <input asp-for="TypeOfUser">
            <span class="error" asp-validation-for="TypeOfUser"></span>
        </div>
        <div class="form-control">
            <div class="buttons-container">
                <button type="submit" class="btn-form">Spara</button>
                <a asp-action="index" asp-controller="UsersAdmin" class="btn-form">Avbryt</a>
            </div>
        </div>
    </form>
</section>
