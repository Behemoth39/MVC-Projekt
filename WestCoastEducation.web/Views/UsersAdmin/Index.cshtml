@model IList<WestCoastEducation.web.ViewModels.UserListViewModel>
@{
    Layout = "_LayoutAdmin";
    ViewBag.Pagetitle = "Users Admin";
}
<section class="page">
    <h1 class="table-h1">Kurser</h1>
    <div class="table-container">
        <div>
            <a class="btn-table" asp-action=create asp-controller="UsersAdmin">Lägg till användare</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Användarnamn</th>
                    <th>Förnamn</th>
                    <th>Efternamn</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Konto</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <a class="edit-icon" asp-action="Edit" asp-controller=UsersAdmin
                            asp-route-UserId="@user.UserId">
                                <i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Phone</td>
                        <td>@user.Email</td>
                        <td>@user.TypeOfUser</td>
                        <td>
                            <a class="delete-icon" asp-action="Delete" asp-controller=UsersAdmin
                            asp-route-UserId="@user.UserId">
                                <i class="fa-solid fa-delete-left"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>
